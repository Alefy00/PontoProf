<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="Ponto.Configs.AppFlyout"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Ponto.Pages"
    Title="AppFlyout"
    FlyoutLayoutBehavior="Popover">
    <FlyoutPage.Flyout>
        <pages:Menu x:Name="flyoutPage" />
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>

                <pages:Login />

            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>